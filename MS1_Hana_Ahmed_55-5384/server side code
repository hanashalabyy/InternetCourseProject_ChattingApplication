import socket
import threading

port = 5605
server_address = ('127.0.0.1', port)

def threaded(conn, addr):     #conn da el client socket w addr el address bta3o
    print("NEW CONNECTION: " + str(addr) + " connected.")
    while True:
        message = conn.recv(1024).decode()

        if message=="CLOSE SOCKET":
            print("[CONNECTION CLOSED] " + str(addr) + " closed the connection.")
            break

        response = message.upper()
        conn.send(response.encode())
        
    conn.close()

def main():
    print("Server is starting...")
    server_socket= socket.socket(socket.AF_INET, socket.SOCK_STREAM)  #el tcp w el version bt3o 
    server_socket.bind(server_address)
    server_socket.listen(5)

    while True:
        conn, addr = server_socket.accept()

        client_thread = threading.Thread(target=threaded, args=(conn, addr))  #create new thread
        client_thread.start()  #will start

        print("ACTIVE CONNECTIONS: " + str(threading.active_count() - 1))

if __name__ == "__main__":
    main()    #run main function bas